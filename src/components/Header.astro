---
import Button from '@components/Button.astro' 
const navMenu: string[] = [
  "Возможности",
  "Умные замки",
  "Тарифы",
  "Скачать",
  "О компании",
];
---

<header class="header">
    <img src="/public/img/logo.svg" alt="" class="logo">
    <div class="header__nav">
        {
            navMenu.map((link) => (
                <a href="#" class="header__nav-link">
                    {link}
                </a>
            ))
        }
    </div>
</header>

<style is:global lang="scss">
    .header{
        display: flex;
        align-items: center;
        gap: 35px;
        background-color: #6263AA;
        padding: 14px 20px 14px 30px;
        &__nav{
            display: flex;
            align-items: center;
            gap: 20px;
            margin-left: auto;
            a{
                text-transform: uppercase;
                font-size: 13px;
                color: #FFF;
                transition: .38s ease-in-out;
                &:hover{
                    opacity: .6;
                }
            }
        }
    }
</style>